rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function adminEmail() {
      return signedIn() && request.auth.token.email in ['jibiza90@gmail.com', 'jpujola@alogroup.es'];
    }

    function adminProfile() {
      return signedIn() &&
        exists(/databases/$(database)/documents/access_profiles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/access_profiles/$(request.auth.uid)).data.role == 'admin' &&
        get(/databases/$(database)/documents/access_profiles/$(request.auth.uid)).data.active != false;
    }

    function isAdmin() {
      return adminEmail() || adminProfile();
    }

    function clientOwns(clientId) {
      return signedIn() &&
        exists(/databases/$(database)/documents/access_profiles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/access_profiles/$(request.auth.uid)).data.role == 'client' &&
        get(/databases/$(database)/documents/access_profiles/$(request.auth.uid)).data.active != false &&
        get(/databases/$(database)/documents/access_profiles/$(request.auth.uid)).data.clientId == clientId;
    }

    match /access_profiles/{uid} {
      allow read: if isAdmin() || (signedIn() && request.auth.uid == uid);
      allow write: if isAdmin();
    }

    match /portfolio/{docId} {
      allow read, write: if isAdmin();
    }

    match /portfolio_client_overviews/{clientId} {
      allow read: if isAdmin() || clientOwns(clientId);
      allow write: if isAdmin();
    }

    match /reportLinks/{token} {
      allow read: if resource.data.expiresAt is int && resource.data.expiresAt > request.time.toMillis();
      allow create, update: if isAdmin() &&
        request.resource.data.expiresAt is int &&
        request.resource.data.expiresAt > request.time.toMillis();
      allow delete: if isAdmin();
    }

    match /support_threads/{clientId} {
      allow read: if isAdmin() || clientOwns(clientId);
      allow create: if isAdmin() || (
        clientOwns(clientId) &&
        request.resource.data.clientId == clientId &&
        request.resource.data.adminUnreadCount is int &&
        request.resource.data.adminUnreadCount >= 1
      );
      allow update: if isAdmin() || (
        clientOwns(clientId) &&
        request.resource.data.clientId == clientId &&
        resource.data.adminUnreadCount is int &&
        request.resource.data.adminUnreadCount is int &&
        request.resource.data.adminUnreadCount >= resource.data.adminUnreadCount
      );
      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read: if isAdmin() || clientOwns(clientId);
        allow create: if (
          isAdmin() &&
          request.resource.data.clientId == clientId &&
          request.resource.data.senderRole == 'admin'
        ) || (
          clientOwns(clientId) &&
          request.resource.data.clientId == clientId &&
          request.resource.data.senderRole == 'client' &&
          request.resource.data.clientRead == true
        );
        allow update: if isAdmin() || (
          clientOwns(clientId) &&
          resource.data.senderRole == 'admin' &&
          request.resource.data.senderRole == resource.data.senderRole &&
          request.resource.data.clientId == resource.data.clientId &&
          request.resource.data.text == resource.data.text &&
          request.resource.data.senderName == resource.data.senderName &&
          request.resource.data.createdAt == resource.data.createdAt &&
          request.resource.data.edited == resource.data.edited &&
          request.resource.data.clientRead == true &&
          request.resource.data.clientReadAt is int &&
          request.resource.data.updatedAt is int
        );
        allow delete: if isAdmin();
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
